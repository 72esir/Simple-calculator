<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumButtonStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:backgroundTint">#363636</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:tag">num</item>
    </style>

    <style name="OperandButtonStyle" parent="NumButtonStyle">
        <item name="android:backgroundTint">#f5a512</item>
        <item name="android:tag">operand</item>
    </style>

    <style name="GrayButtonStyle" parent="NumButtonStyle">
        <item name="android:backgroundTint">#a4a4a4</item>
        <item name="android:tag">special</item>
    </style>

    <style name="TextAreaStyle">
        <item name="android:textSize">50sp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
    </style>
</resources>